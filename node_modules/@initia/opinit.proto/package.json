{
  "name": "@initia/opinit.proto",
  "version": "0.0.8",
  "description": "JS and TS types relating to Protocol Buffers used by OPinit project",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/initia-labs/OPinit.proto"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "amino/",
    "cosmos/",
    "cosmos_proto/",
    "gogoproto/",
    "google/",
    "opinit/",
    "tendermint/",
    "*.md"
  ],
  "scripts": {
    "format": "prettier --write --loglevel warn \"./src/**/*.ts\"",
    "build": "rm -rf ./build && tsc --module commonjs && ./scripts/prepare.sh",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.6",
    "@types/long": "^5.0.0",
    "@types/node": "^18.7.18",
    "prettier": "^2.7.1",
    "ts-proto": "1.126.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@improbable-eng/grpc-web": "^0.15.0",
    "google-protobuf": "^3.21.0",
    "long": "^5.2.0",
    "protobufjs": "^7.1.1"
  }
}
